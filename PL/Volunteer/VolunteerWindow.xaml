<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerWindow" Height="500" Width="600"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        FlowDirection="RightToLeft">
    <Window.Resources>
        <Style x:Key="myTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}" />
            <Setter Property="Visibility" Value="Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="תעודת זהות:" Grid.Row="0" Grid.Column="0"  Grid.RowSpan="2"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                  IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}"
                 Text="{Binding CurrentVolunteer.Id, Mode=TwoWay, NotifyOnValidationError=true,
            ValidatesOnExceptions=true}"  Grid.RowSpan="2"/>

        <Label Content="שם:" Grid.Column="0"  Grid.RowSpan="3"/>
        <TextBox Grid.Column="1"
            Text="{Binding CurrentVolunteer.Name, Mode=TwoWay, NotifyOnValidationError=true,
            ValidatesOnExceptions=true}" Grid.RowSpan="3"   
             />
        <Label Content="מספר טלפון:" Grid.Row="2" Grid.Column="0"  Grid.RowSpan="2"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay, NotifyOnValidationError=true,
                  ValidatesOnExceptions=true}"  Grid.RowSpan="2"/>

        <Label Content="מייל:" Grid.Row="2" Grid.Column="0"  Grid.RowSpan="3"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=true,
                 ValidatesOnExceptions=true}"  Grid.RowSpan="3"/>

        <Label Content="סיסמא:" Grid.Row="3" Grid.Column="0"  Grid.RowSpan="3"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Password, Mode=TwoWay, NotifyOnValidationError=true,
                 ValidatesOnExceptions=true}"  Grid.RowSpan="3"/>

        <Label Content="כתובת:" Grid.Row="4" Grid.Column="0"  Grid.RowSpan="3"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Address, Mode=TwoWay, NotifyOnValidationError=true,
                 ValidatesOnExceptions=true}"  Grid.RowSpan="3"/>

        <Label Content="קו רוחב:" Grid.Row="5" Grid.Column="0"  Grid.RowSpan="3"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
           Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay, NotifyOnValidationError=true,
           ValidatesOnExceptions=true}" Grid.RowSpan="3" Style="{StaticResource myTextBoxStyle}"/>

        <Label Content="קו אורך:" Grid.Row="7" Grid.Column="0"  Grid.RowSpan="2"/>
        <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource myTextBoxStyle}"
         Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay, NotifyOnValidationError=true,
          ValidatesOnExceptions=true}"  Grid.RowSpan="2"/>

        <Label Content="תפקיד:" Grid.Row="8" Grid.Column="0"  Grid.RowSpan="2"/>
        <ComboBox Grid.Row="8" Grid.Column="1"
                  SelectedValue="{Binding CurrentVolunteer.Role, Mode=TwoWay, NotifyOnValidationError=true, 
                  ValidatesOnExceptions=true}"
                  ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}"  Grid.RowSpan="2" />

        <Label Content="לא פעיל/פעיל:" Grid.Row="9" Grid.Column="0"  Grid.RowSpan="2"/>
        <CheckBox Grid.Row="9" Grid.Column="1" VerticalAlignment="Center"
                  IsChecked="{Binding CurrentVolunteer.Active, Mode=TwoWay}"/>

        <Label Content="מרחק מקסימלי לקריאה:" Grid.Row="10" Grid.Column="0" Grid.RowSpan="3"/>
        <TextBox Grid.Row="10" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.MaxDistanceForCall, Mode=TwoWay, NotifyOnValidationError=true,
                 ValidatesOnExceptions=true}" Grid.RowSpan="3"/>

        <Label Content="סוג מרחק:" Grid.Row="12" Grid.Column="0"  Grid.RowSpan="2"/>
        <ComboBox Grid.Row="12" Grid.Column="1"
              SelectedValue="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay, NotifyOnValidationError=true, 
              ValidatesOnExceptions=true}"
              ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}"  Grid.RowSpan="2" />

        <Label Content="סך קריאות שטופלו :" Grid.Row="12" Grid.Column="0"  Grid.RowSpan="3"/>
        <TextBox Grid.Row="12" Grid.Column="1"
                 Style="{StaticResource myTextBoxStyle}"
          Text="{Binding CurrentVolunteer.TotalCallsHandled, Mode=TwoWay, NotifyOnValidationError=true,
           ValidatesOnExceptions=true}" Grid.RowSpan="3"/>

        <Label Content="סך קריאות שבוטלו:" Grid.Row="14" Grid.Column="0"/>
        <TextBox Grid.Row="14" Grid.Column="1" Style="{StaticResource myTextBoxStyle}"
       Text="{Binding CurrentVolunteer.TotalCallsCanceled, Mode=TwoWay, NotifyOnValidationError=true,
        ValidatesOnExceptions=true}"/>

        <Label Content="סך קריאות שבחר לטפל ופג תוקפן:" Grid.Row="14" Grid.Column="0"  Grid.RowSpan="4"/>
        <TextBox Grid.Row="14" Grid.Column="1" Style="{StaticResource myTextBoxStyle}"
         Text="{Binding CurrentVolunteer.TotalCallsChoseHandleHaveExpired, Mode=TwoWay, NotifyOnValidationError=true,
         ValidatesOnExceptions=true}"  Grid.RowSpan="4"/>

        <Button Grid.Row="15" Grid.Column="1" Height="50" Margin="50,100,200,45" 
                Content="{Binding ButtonText}" Click="btnAddUpdate_Click" />
    </Grid>
</Window>
