<Window x:Class="PL.Call.CallsHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Title="CallsHistory" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"/>
            <ComboBox SelectedValue="{Binding CallType, Mode=TwoWay}"
         ItemsSource="{Binding Source= {StaticResource CallTypeCollectionKey}}"
         SelectionChanged="filterBySelect_SelectionChanged"
         Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            </ComboBox>

        </Grid>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Path=OpenCallList}" IsReadOnly ="True" AutoGenerateColumns="False"
    EnableRowVirtualization="True" RowDetailsVisibilityMode="VisibleWhenSelected"
    SelectedItem="{Binding SelectedCall}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="CallId" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding CallType}" Header="Call Type" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding CallAddress}" Header="Call Address" Width="Auto"/>

                <DataGridTemplateColumn Header="Opening Time" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding OpeningTime, StringFormat='{}{0:HH:mm dd/MM/yyyy}'}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Entry Time For Treatment" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EntryTimeForTreatment, StringFormat='{}{0:HH:mm dd/MM/yyyy}'}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="End Of Treatment Time" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EndOfTreatmentTime, StringFormat='{}{0:HH:mm dd/MM/yyyy}'}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn Binding="{Binding TypeOfTreatmentTermination}" Header="Type Of Treatment Termination" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
