<Window x:Class="PL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        FlowDirection="RightToLeft">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
        <Label Content="תעודת זהות:"/>
            <TextBox Text="{Binding password, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
        <Label Content="סיסמא:"/>
        <TextBox/>
            <Button Content="אישור" Margin="0,10" Click="Login_Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Visibility="Hidden">
            <Button Content="הכנס כמנהל"/>
            <Button Content="הכנס כמתנדב"/>
        </StackPanel>
    </Grid>
</Window>
